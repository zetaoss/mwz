FROM ghcr.io/zetaoss/zbase:latest

RUN set -eux \
    && apk add --no-cache \
    bash \
    composer \
    inotify-tools \
    linux-headers \
    nodejs \
    shadow \
    && chsh -s /bin/bash \
    && docker-php-ext-install zip \
    && pecl install \
    xdebug \
    && docker-php-ext-enable \
    xdebug \
    && rm -rf /tmp/pear/
